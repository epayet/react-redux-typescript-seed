{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "lib": ["es2015", "dom"]
  },
  "exclude": [
    "dist",
    "node_modules",
    "typings"
  ],
  "files": [
    "typings/index.d.ts",
    "node_modules/redux/index.d.ts",
    "src/index.tsx"
  ],
  "filesGlob": [
    "typings/index.d.ts",
    "node_modules/redux/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/index.tsx"
  ]
}